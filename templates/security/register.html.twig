{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <main>
        <section id="auth">
            <div class="image">
                <img class="heightLogin" src="{{ asset('images/leaf.webp') }}" alt="description de l'image">
            </div>
            <div class="form">
                <h2>Inscription</h2>
                
                {% if not registrationForm.vars.valid %}
                    <div class="flash-error">
                        {% for error in registrationForm.vars.errors %}
                            <div>{{ error.message }}</div>
                        {% endfor %}
                        {% for child in registrationForm.children %}
                            {% for error in child.vars.errors %}
                                <div>{{ error.message }}</div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
                
                {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
                    {{ form_row(registrationForm.name, {
                        'label': 'Nom',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre nom'
                        }
                    }) }}
                    
                    {{ form_row(registrationForm.surname, {
                        'label': 'Prénom',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre prénom'
                        }
                    }) }}
                    
                    {{ form_row(registrationForm.email, {
                        'label': 'Adresse email',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre email'
                        }
                    }) }}
                    
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de passe',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Votre mot de passe'
                        }
                    }) }}

                    {{ form_row(registrationForm.confirmPassword, {
                        'label': 'Confirmation du mot de passe',
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Confirmez votre mot de passe'
                        }
                    }) }}
                    
                    <div class="form-group terms">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'form-check-input'
                            }
                        }) }}
                        <a href="{{ path('app_login') }}" class="terms-link">
                            J'accepte les CGU de GreenGoodies
                        </a>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    
                    <button type="submit" class="btn btn-lg btn-primary">
                        S'inscrire
                    </button>
                    
                    <div class="auth-link">
                        <a href="{{ path('app_login') }}">
                            Déjà un compte ? Se connecter
                        </a>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </section>
    </main>
{% endblock %}